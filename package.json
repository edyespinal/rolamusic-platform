{
  "name": "platform",
  "private": true,
  "scripts": {
    "build": "dotenv -- turbo build",
    "dev": "dotenv -- turbo dev",
    "dev-admin": "dotenv -- turbo dev --filter=...admin",
    "dev-links": "dotenv -- turbo dev --filter=...links",
    "dev-help": "dotenv -- turbo dev --filter=...help",
    "dev-artists": "dotenv -- turbo dev --filter=...artists",
    "dev-fans": "dotenv -- turbo dev --filter=...fans",
    "dev-profiles": "dotenv -- turbo dev --filter=...profiles",
    "lint": "dotenv -- turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "@rola/eslint-config": "workspace:*",
    "@rola/typescript-config": "workspace:*",
    "dotenv-cli": "^7.4.2",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.6.6",
    "turbo": "latest"
  },
  "packageManager": "pnpm@8.9.0",
  "engines": {
    "node": ">=18"
  }
}
